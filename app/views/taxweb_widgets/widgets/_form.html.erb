<%= form_for @alert do |f| %>

  <% if @alert.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@alert.errors.count, "error") %> prohibited this alert from being saved:</h2>
      <ul>
      <% @alert.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :mtype, class: 'control-label' %><br>
    <%= f.select :mtype, ['success', 'info', 'error', 'warning'], {}, {class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.label :message, class: 'control-label' %><br>
    <%= f.text_area :message, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :timeout, class: 'control-label' %><br>
    <%= f.number_field :timeout, class: 'form-control' %>
  </div>
    <div class="form-group">
      <%= f.label :start, class: 'control-label' %><br>
      <%= f.date_field :start, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :end, class: 'control-label' %><br>
      <%= f.date_field :end, class: 'form-control' %>
    </div>
  <div class="actions">
    <%= f.submit nil, class: 'btn btn-success' %>
  </div>
<% end %>
